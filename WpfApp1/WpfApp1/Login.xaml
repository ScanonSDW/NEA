<Window x:Class="WpfApp1.Login"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="Login" Height="450" Width="800">
    <Grid>
        <Button x:Name="btnBackLog" Click="BtnBackLog_Clicked" Content="Back" HorizontalAlignment="Left" Margin="40,40,0,0" VerticalAlignment="Top" Width="75" Height="20"/>
        <Label x:Name="lblUsername" Content="Username" HorizontalAlignment="Left" Margin="100,100,0,0" VerticalAlignment="Top" Height="26" Width="63"/>
        <Label x:Name="lblPassword" Content="Password" HorizontalAlignment="Left" Margin="100,200,0,0" VerticalAlignment="Top" Height="26" Width="60"/>
        <TextBox x:Name="txtUsername" HorizontalAlignment="Left" Height="23" Margin="200,100,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120"/>
        <TextBox x:Name="txtPassword" HorizontalAlignment="Left" Height="23" Margin="200,200,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120"/>
        <Button x:Name="btnLogin" Content="Login" HorizontalAlignment="Left" Margin="150,300,0,0" VerticalAlignment="Top" Width="75" Click="BtnLogin_Click" Height="20"/>
    </Grid>
</Window>
