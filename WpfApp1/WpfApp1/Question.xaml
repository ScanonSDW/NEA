<Window x:Class="WpfApp1.Question"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="Question" Height="450" Width="800">
    <Grid>
        <Button x:Name="btnBack" Content="Back" HorizontalAlignment="Left" Margin="50,25,0,0" VerticalAlignment="Top" Width="75" Click="btnBack_Click"/>
        <Label x:Name="lblQuestionNo" Content="Question:" HorizontalAlignment="Left" Margin="50,75,0,0" VerticalAlignment="Top"/>
        <Button x:Name="btnAnswer" Content="Answer" HorizontalAlignment="Left" Margin="436,350,0,0" VerticalAlignment="Top" Width="75"/>
        <Button x:Name="btnSkipQ" Content="Skip" HorizontalAlignment="Left" Margin="650,350,0,0" VerticalAlignment="Top" Width="75"/>
        <Label x:Name="lblQuestionHere" Content="Question Here" HorizontalAlignment="Left" Margin="350,125,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="txtAnswer" HorizontalAlignment="Left" Height="23" Margin="200,355,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <Label x:Name="lblYourAnswer" Content="Your Answer:" HorizontalAlignment="Left" Margin="50,352,0,0" VerticalAlignment="Top"/>

    </Grid>
</Window>
